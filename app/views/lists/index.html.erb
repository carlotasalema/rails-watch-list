<div class="container">
  <div class="my-3">
    <h1 class="fs-1 text fw-bolder">Save your movies here:</h1>
  </div>
  <div class="container d-flex justify-content-between">
    <div>
      <h2>My lists:</h2>
      <div class="d-flex">
        <% @lists.each do |list| %>
          <div class="card m-3" style="width: 18rem;">
            <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key, class:"card-img-top" %>
            <% else %>
            <img src="https://www.tvupdates.in/wp-content/uploads/2023/12/rDJegQJaCyGaYysj2g5XWY-1200-80.jpg" class="card-img-top" alt="...">
            <% end %>
            <div class="card-body">
              <h5 class="card-title fs-2 text fw-bolder"><%= list.name %></h5>
              <%= link_to "See bookmarks", list_path(list), class:"btn btn-primary"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div>
      <%= link_to "Create new list", new_list_path, class:"btn btn-danger text-white" %>
    </div>
  </div>
</div>
