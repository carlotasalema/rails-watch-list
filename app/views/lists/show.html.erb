<div class="container m-3">
<% if @list.photo.attached? %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
    <h1><%= @list.name %></h1>
  </div>
  <% else %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://www.tvupdates.in/wp-content/uploads/2023/12/rDJegQJaCyGaYysj2g5XWY-1200-80.jpg')">
    <h1><%= @list.name %></h1>
  </div>
  <% end %>
  <div class="m-3 d-flex justify-content-between">
    <div class="d-flex flex-wrap">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card border-rounded m-3" style="width: 18rem;">
          <% if bookmark.photo.attached? %>
            <%= cl_image_tag bookmark.photo.key, class:"card-img-top" %>
          <% else %>
            <%= image_tag bookmark.movie.poster_url, class:"card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title fs-2 text fw-bolder"><%= bookmark.movie.title %></h5>
            <p class="card-title"><%= bookmark.movie.overview %></p>
            <p class="card-title"><%= bookmark.movie.rating %> âœ¦</p>
            <p class="card-title"><%= bookmark.comment %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div>
      <%= link_to "Add bookmark", new_list_bookmark_path(@list), class:"btn btn-danger text-white" %>
    </div>
  </div>
</div>
